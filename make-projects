#!/usr/bin/env bash

. ./theme || exit
. ./tools/repeat-char || exit

# Header with logo and basic info
./make-header
echo

# Projects content with proper padding
padding=5
padding_str=$(repeat-char ' ' "$padding")

printf "%s${WHITE}My Projects${RESET}\n\n" "$padding_str"

# Project entries
projects=(
    "${LIGHTERBLUE}1. Similar Song Finder${RESET}|${GRAY300}A web app that helps users find similar songs using the text & audio embedding model, CLAP.${RESET}|${DARKERBLUE}https://github.com/evanl23/music-similarity${RESET}"
    "${LIGHTERBLUE}2. Personal Website Reimagined (eliu.sh)${RESET}|${GRAY300}This terminal-based website you're browsing right now!${RESET}|${DARKERBLUE}https://github.com/evanl23/eliu.sh${RESET}"
    "${LIGHTERBLUE}3. Handheld Raman Spectroscope${RESET}|${GRAY300}An iPhone detatchable device with the intent of identifying unique chemical signatures.${RESET}|${DARKERBLUE}https://github.com/evanl23/RamanSpectroscopy${RESET}"
    "${LIGHTERBLUE}4. Personal AI Assistant${RESET}|${GRAY300}A proactive personal assistant that manages deadlines, meetings, and due-dates, all through SMS.${RESET}|${DARKERBLUE}https://github.com/evanl23/AI-Texting-Assistant${RESET}"
    "${LIGHTERBLUE}5. Terminal Geometry Dash${RESET}|${GRAY300}An ASCII-style recreation of the popular Geometry Dash game by RobTop, designed to run in your terminal.${RESET}|${DARKERBLUE}https://github.com/evanl23/GeometryDash${RESET}"
    "${LIGHTERBLUE}6. Trading Engine${RESET}|${GRAY300}Trading Engine Server that hosts servers for trading securities, allows clients to create orders, and match orders between clients.${RESET}|${DARKERBLUE}https://github.com/evanl23/Trading-Engine${RESET}"
  )

# Print projects with proper formatting
for project in "${projects[@]}"; do
    IFS='|' read -r title desc link <<< "$project"
    
    printf "%s%s\n" "$padding_str" "$title"
    printf "%s  %s\n" "$padding_str" "$desc"
    printf "%s  %s\n\n" "$padding_str" "$link"
done

printf "%s${WHITE}Want to see more? Check them out here:${RESET} ${DARKERBLUE}https://github.com/evanl23?tab=repositories ${RESET}\n" "$padding_str"

echo
