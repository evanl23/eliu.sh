#!/usr/bin/env bash

. ../theme || exit

declare -a colors=(
  [0]='\033[38;2;128;0;128m'        # Deep purple
  [1]='\033[38;2;102;0;153m'
  [2]='\033[38;2;75;0;130m'         # Indigo
  [3]='\033[38;2;60;0;170m'
  [4]='\033[38;2;30;0;200m' 
  [5]='\033[38;2;0;0;255m'          # Pure blue
  [6]='\033[38;2;0;128;255m' 
  [7]='\033[38;2;0;180;200m'
  [8]='\033[38;2;0;255;180m'
  [9]='\033[38;2;0;255;255m'        # Cyan / light blue
  [10]='\033[38;2;0;255;100m'       # Green-cyan
  [11]='\033[38;2;0;255;0m'         # Bright green
  [12]='\033[38;2;100;255;0m' 
  [13]='\033[38;2;180;255;0m'
  [14]='\033[38;2;255;255;0m'       # Bright yellow 
  [15]='\033[38;2;255;200;0m' 
  [16]='\033[38;2;255;165;0m'       # True orange
  [17]='\033[38;2;255;100;0m' 
  [18]='\033[38;2;255;50;0m'
  [19]='\033[38;2;255;0;0m'         # Bright red
  [20]='\033[38;2;255;0;255m'       # Magenta (pinkish violet)
  [21]='\033[38;2;238;130;238m'     # Light violet
)

